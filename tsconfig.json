{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom",
      "dom.iterable",
      "scripthost"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "outDir": "./built",
    "allowJs": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "typeRoots": [ "./typings" ],
    // "types": ["node"],
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "node_modules",
    "./plugins/**/*",
    "./typings/**/*",
    "./built/**/*"
  ],
  "main": "./dist/lib/library.umd.js",
  "module": "./dist/lib/library.es.js",
  "typings": "./dist/types/main.d.ts",
}
